<!DOCTYPE html>
<html lang="en">

@*<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
*@
<head>

    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
 
    <!-- Title -->
    <title>@ViewData["Title"] - KmsUIRazor</title>
    <partial name="_SiteHeaderRefrencePartial" />
    @await RenderSectionAsync("Styles", required: false)


</head>

<body class="main-body app sidebar-mini">

     @await Component.InvokeAsync("Switcher")


    <!-- Loader -->
    <div id="global-loader">
        <img src="/assets/img/loader.svg" class="loader-img" alt="Loader">
    </div>
    <!-- /Loader -->
    <!-- Page -->
    <div class="page">


        @await Component.InvokeAsync("Sidebar")



        <div class='main-content app-content'>
            @await Component.InvokeAsync("Header")
            <!-- Container open -->
            <!-- main-content -->
            <div class="container-fluid">
                @RenderBody()
            </div>
            <!-- main-content -->
            <!-- Container closed -->
        </div>




        <!-- main-content closed -->

        @await Component.InvokeAsync("Footer")
        <!-- modal -->
    </div>
    <!-- Page closed -->
    <!-- scripts -->
    <!-- Back-to-top -->
    <a href="#top" id="back-to-top"><i class="las la-angle-double-up"></i></a>
    @await RenderSectionAsync("ScriptsTreeOrganization", required: false)

    <partial name="_SiteFooterRefrencePartial" />
    <partial name="_AlertsPartial" />

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

